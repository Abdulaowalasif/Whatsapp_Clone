<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFBDBD"
    android:gravity="center"
    tools:context=".Activity.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#BFBDBD"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:importantForAccessibility="no"
            android:src="@drawable/whatsapp" />

        <EditText
            android:id="@+id/sign_up_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="@string/hint_username"
            android:textColor="@color/black"
            android:textColorHint="#AAAAAA"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:textColor="@color/black"
            android:textColorHint="#AAAAAA"
            android:id="@+id/sign_up_userEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <EditText
            android:textColor="@color/black"
            android:textColorHint="#AAAAAA"
            android:id="@+id/sign_up_userPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="@string/hint_pass"
            android:inputType="textPassword"
            android:padding="10dp" />

        <TextView
            android:id="@+id/signUpLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:text="@string/sign_up_text"
            android:textColor="#4CAD50"
            android:textSize="17sp" />

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#4CAE50"
            android:text="@string/sign_up_btn"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/sign_up_google_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/google"
                android:text="@string/google"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/sign_up_facebook_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#1877F1"
                android:drawableStart="@drawable/facebook"
                android:text="@string/fb"
                android:textAllCaps="false" />

        </LinearLayout>

        <TextView
            android:id="@+id/sign_up_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/sign_up_phone"
            android:textColor="#4CAD50"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>